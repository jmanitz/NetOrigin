citHeader("To cite NetOrigin in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype="Manual",
         header="",
         footer="",
         title = "{NetOrigin}: Origin Estimation for Propagation Processes on Complex Networks",
         author = c(person("Juliane", "Manitz", role=c("cre", "aut")),
             person("Jonas", "Harbering", role="ctb")),             
         year = year,
         note = note,
         url = "http://CRAN.R-project.org/package=NetOrigin"
         )

